 pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh '''
                echo "Building..."
                ls -lrt
                '''

            }
        }
            stage('test'){
                steps {
                    sh '''
                    echo "testing the build."
                    echo "$JOB_NAME"
                    echo "$JOB_ID
                    pwd
                    '''
                }
            }
        }
    }
 
